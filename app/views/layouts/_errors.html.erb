<% if model.errors.any? %>
  <div class="error">
    <h2>
      <%= pluralize(model.errors.count, "error") %>
      prohibited this <%= model.class %> from being saved:
    </h2>
 
    <ul>
      <% model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>